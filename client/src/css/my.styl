.my-box
  margin 30px auto
  width 800px
  background #fff
  .h1 
    line-height 80px
    font-size 28px
    padding-left 20px
    border-bottom 1px solid #dedede
  .setting-list 
    .item
      padding 20px 0
      border-bottom 1px solid #dedede
    .title
      float left
      width 100px
      padding-left 20px
    .set-box
      float left
    .head-img
      display inline-block
      vertical-align middle
      width 60px
      height 60px
    .upload-box
      display inline-block
      margin-left 20px
    .upload-btn
      position relative
      width 100px
      height 30px
      .input
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        opacity 0
      .btn-change
        margin-top 10px

      


